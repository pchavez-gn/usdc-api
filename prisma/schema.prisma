generator client {
    provider = "prisma-client-js"
    // output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Transfer {
    id        String   @id @default(cuid())
    txHash    String
    logIndex  Int
    block     Int
    blockHash String
    from      String
    to        String
    amount    String
    timestamp DateTime

    @@unique([txHash, logIndex])
    @@index([from])
    @@index([to])
}